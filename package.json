{
  "private": true,
  "scripts": {
    "prepare": "yarn simple-git-hooks",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "run-p -c -l lint:**",
    "lint:stylelint": "stylelint src/styles/**/*.scss --ignore-path .gitignore",
    "lint:eslint": "eslint -c .eslintrc.json --ext .js,.jsx,.ts,.tsx src --ignore-pattern",
    "fix": "run-s -l fix:**",
    "fix:prettier": "prettier --write src",
    "fix:eslint": "eslint --fix --ext .js,.jsx,.ts,.tsx src --ignore-pattern"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged",
    "prepare-commit-msg": "exec < /dev/tty && node_modules/.bin/cz --hook || true",
    "preserveUnused": true
  },
  "lint-staged": {
    "*": [
      "git secrets --scan"
    ],
    "*.{css,scss}": [
      "yarn fix:prettier",
      "yarn lint:stylelint"
    ],
    "*.{js,jsx,ts,tsx}": [
      "yarn fix:prettier",
      "yarn fix:eslint",
      "yarn lint:eslint"
    ]
  },
  "dependencies": {
    "date-fns": "^2.28.0",
    "glob": "^7.2.0",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.5.0",
    "next": "^12.1.6",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-feather": "^2.0.9",
    "rehype-highlight": "^5.0.2",
    "rehype-stringify": "^9.0.3",
    "remark-gfm": "^3.0.1",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "sass": "^1.50.0",
    "unified": "^10.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.1",
    "@commitlint/config-conventional": "^17.0.0",
    "@commitlint/cz-commitlint": "^17.0.0",
    "@types/glob": "^7.2.0",
    "@types/node": "16.11.33",
    "@types/react": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "commitizen": "^4.2.4",
    "eslint": "^8.16.0",
    "eslint-config-next": "12.1.6",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "lint-staged": "^12.4.2",
    "npm-run-all": "^4.1.5",
    "postcss-scss": "^4.0.4",
    "prettier": "2.6.2",
    "simple-git-hooks": "^2.7.0",
    "stylelint": "^14.8.2",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "^4.2.0",
    "typescript": "^4.6.4"
  }
}
